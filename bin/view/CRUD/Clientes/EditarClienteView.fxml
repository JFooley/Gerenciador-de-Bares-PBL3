<AnchorPane prefHeight="325.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CRUD.cliente.EditarClienteController">
   <children>
      <VBox alignment="CENTER" layoutX="20.0" layoutY="13.0" prefHeight="299.0" prefWidth="163.0">
         <children>
            <Text fx:id="Mensagem" strokeType="OUTSIDE" strokeWidth="0.0" text="Erro!" visible="false" />
            <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="163.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nome" />
                  <TextField fx:id="NomeTextField" promptText="Digite o nome" styleClass="button1" stylesheets="@../../../controller/fullpackstyling.css" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="163.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Telefone" />
                  <TextField fx:id="TelefoneTextField" promptText="Digite o telefone" styleClass="button1" stylesheets="@../../../controller/fullpackstyling.css" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="52.0" prefWidth="163.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="CPF" />
                  <TextField fx:id="CPFTextField" promptText="Digite o CPF" styleClass="button1" stylesheets="@../../../controller/fullpackstyling.css" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="64.0" prefWidth="163.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email" />
                  <TextField fx:id="EmailTextField" promptText="Digite o email" styleClass="button1" stylesheets="@../../../controller/fullpackstyling.css" />
               </children>
            </VBox>
            <Button fx:id="ConfirmarButton" mnemonicParsing="false" onAction="#ConfirmarEditar" styleClass="button4" stylesheets="@../../../controller/fullpackstyling.css" text="Confirmar" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
