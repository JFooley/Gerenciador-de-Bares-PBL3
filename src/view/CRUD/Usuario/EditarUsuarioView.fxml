<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="325.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CRUD.usuario.EditarUsuarioController">
   <children>
      <VBox alignment="CENTER" layoutX="20.0" layoutY="13.0" prefHeight="299.0" prefWidth="163.0">
         <children>
            <Text fx:id="CriarUsuarioMensagem" strokeType="OUTSIDE" strokeWidth="0.0" text="Erro!" visible="false" />
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nome" />
                  <TextField fx:id="NomeTextField" promptText="Digite o nome" styleClass="button1" stylesheets="@../../../controller/fullpackstyling.css" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Senha" />
                  <TextField fx:id="SenhaPasswordField" promptText="Digite a senha" styleClass="button1" stylesheets="@../../../controller/fullpackstyling.css" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="201.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nível de acesso" />
                  <RadioButton fx:id="ADMRadioButton" mnemonicParsing="false" text="Gerente" />
               </children>
            </VBox>
            <Button fx:id="ConfirmarButton" mnemonicParsing="false" onAction="#ConfirmarEditar" styleClass="button4" stylesheets="@../../../controller/fullpackstyling.css" text="Confirmar edição" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
